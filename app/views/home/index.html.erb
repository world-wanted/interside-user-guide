      <div class="col-sm-12 screen-flow-wrapper">
        <div class="float-left arr-wrapper prev-page change-page-btn">
          <%=image_tag "back-arr.svg" %>
        </div>
        <div class="float-right arr-wrapper next-page change-page-btn">
          <%=image_tag "next-arr.svg" %>
        </div>
      </div>
      <div class="col-sm-12">
        <div class="screen-wrapper">
